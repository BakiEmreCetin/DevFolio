@model List<DevFolio.Models.TblFeature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özelliklerim Listesi</h2>


<td><a href="/Feature/CreateFeature/" class="btn btn-info">Yeni Özellik Girişi</a></td>
<br />
<br />


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.HeaderTitle</td>
            <td>@item.HeaderDescription</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>


