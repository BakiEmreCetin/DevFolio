﻿@model List<DevFolio.Models.TblProject>
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Proje Listesi</h2>

<div class="container">
    <a href="/Project/CreateProject/" class="btn btn-info">Yeni Proje Ekle</a>
    <br />
    <br />

    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Proje Başlık</th>
            <th>Proje Resim</th>
            <th>Proje Tarihi</th>
            <th>Kategori</th>
            <th>GitHup</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.ProjectID</td>
        <td>@item.Title</td>
        <td>@item.CoverImageUrl</td>
        <td>@(((DateTime)item.CreatedDate).ToString("dd.MM.yyyy"))</td>

        <td>@item.TblCategory.CategoryName</td>
        <td><a href="#" class="btn btn-dark">GitHub</a></td>
        <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
    </tr>
        }
    </table>
</div>