@model DevFolio.Models.TblSocialMedia
@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Ekleme Sayfası</h2>

<br />
<div class="container">

    @using (Html.BeginForm("CreateSocialMedia", "SocialMedia", FormMethod.Post))
    {
        <form class="form-group" method="post">
            <label>Platform Adı</label>

            @Html.TextBoxFor(x => x.PlatformName, new { @class = "form-control" })
            <br />
            <label>Platform İcon Adresi</label>
            @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })
            <br />
            <label>Hesap Adresi</label>
            @Html.TextBoxFor(x => x.RedirectUrl, new { @class = "form-control" })
            <br />
            <button class="btn btn-primary">Kaydet</button>
        </form>
    }
</div>