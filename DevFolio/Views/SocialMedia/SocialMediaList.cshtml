@model List<DevFolio.Models.TblSocialMedia>

@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Sosyal Media Listesi</h2>

<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Yeni Sosyal Medya Ekle</a>
<br /> 
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.SocialMediaId</td>
        <td>@item.PlatformName</td>
        <td>@item.Status</td>     
        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger">Sil</a></td>
        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-primary">Güncelle</a></td>
    </tr>
    }
</table>
   
    


