﻿@model DevFolio.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Güncelle</h2>
<br />
<div class="container">

    @using (Html.BeginForm("UpdateSocialMedia", "SocialMedia", FormMethod.Post))
    {
    <form class="form-group" method="post">

        @Html.HiddenFor(x => x.SocialMediaId)
        @Html.HiddenFor(x => x.Status)
        <label>Platform Adı</label>
        @Html.TextBoxFor(x => x.PlatformName, new { @class = "form-control" })
        <br />
        <label>Platform İcon Adresi</label>
        @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })
        <br />
        <label>Hesap Adresi</label>
        @Html.TextBoxFor(x => x.RedirectUrl, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Kaydet</button>
        <br />
        <br />
        <a href="/SocialMedia/SocialMediaList/" class="btn btn-primary">Geri Dön</a>
    </form>
    }
</div>
