﻿@model List<DevFolio.Models.TblAddress>
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Bilgisi</h2>

<a href="/Address/CreateAddress/" class="btn btn-info">İletişim Bilgisi Ekle</a>
<br />
<br />

<div class="container">


    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Açıklama</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>E-mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {


            <tr>
                <td>@item.AddressId</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td><a href="/Address/DeleteAddress/@item.AddressId" class="btn btn-warning">Sil</a></td>
                <td><a href="/Address/UpdateAddress/@item.AddressId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }


    </table>
</div>

