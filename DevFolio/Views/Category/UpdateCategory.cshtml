@model DevFolio.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<br />
<div class="container">

    @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
    {
        <form class="form-group" method="post">
            <label>Kategori Adı</label>
            @Html.HiddenFor(x => x.CategoryId)
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            <br />           
            <button class="btn btn-primary">Kaydet</button>
        </form>
    }
</div>
